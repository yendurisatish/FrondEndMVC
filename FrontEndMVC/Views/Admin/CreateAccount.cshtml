@{
    ViewBag.Title = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title></title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <script src="~/Scripts/CreateAccount.js"></script>
</head>
<body>
    <form id="form1">
        <h2>Create Account</h2>
        <table style="width:100%;">
            <tr>
                <td class="auto-style2">Username:</td>
                <td class="auto-style2">
                    <input id="username" type="text" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2"></td>
            </tr>
            <tr>
                <td class="auto-style2">First name:</td>
                <td class="auto-style2">
                    <input id="firstname" type="text" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2">&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">Last name:</td>
                <td class="auto-style2">
                    <input id="lastname" type="text" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2"></td>
            </tr>
            <tr>
                <td class="auto-style2">Date of birth:(dd/mm/yyyy)</td>
                <td class="auto-style2">
                    <input id="dob" type="text" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2"></td>
            </tr>
            <tr>
                <td class="auto-style2">phone number:</td>
                <td class="auto-style2">
                    <input id="phoneno" type="number" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2"></td>
            </tr>
            <tr>
                <td class="auto-style2">email:</td>
                <td class="auto-style2">
                    <input id="email" type="text" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2"></td>
            </tr>
            <tr>
                <td class="auto-style2">password:</td>
                <td class="auto-style2">
                    <input id="password" type="password" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2">&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">confirm password:</td>
                <td class="auto-style2">
                    <input id="cpassword" type="password" style="margin-bottom:10px" />
                </td>
                <td class="auto-style2">&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">aadhar number:</td>
                <td class="auto-style2">
                    <input id="aadhar" type="number" style="margin-bottom:10px" />
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">account type:</td>
                <td class="auto-style2">
                    <select id="account_type" style="margin-bottom:10px">
                        <option value="savings">savings</option>
                        <option value="current">current</option>
                    </select>
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">balance:</td>
                <td class="auto-style2">
                    <input id="balance" type="number" style="margin-bottom:10px" />
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">address:</td>
                <td class="auto-style2">
                    <input id="address" type="text" style="margin-bottom:10px" />
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">Is Admin(yes/no : 1/0):</td>
                <td class="auto-style2">
                    <select id="Isadmin" style="margin-bottom:15px">
                        <option value="true">yes</option>
                        <option value="false">no</option>
                    </select>
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td class="auto-style2">&nbsp;</td>
                <td class="auto-style2">
                    <button type="button" id="submit">Submit</button>
                </td>
            </tr>
        </table>


    </form>
</body>